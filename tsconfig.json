{
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "allowImportingTsExtensions": true,
        "noEmit": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "**/*.d.ts"
    ]
}